<style>
  :root {
    --space-y: 5rem;
    --color-lo: #222;
    --color-hi: #eee;
    --color-A: rebeccapurple;
    --color-dev: #7cbcbcbc;
    --break-box-shadow: 0 -0.5rem inset;
  }

  /* UI-Board */
  .ui-board section ~ section {
    border-top: 2px solid;
    padding-top: var(--space-y);
    margin-top: var(--space-y);
  }
  .ui-board > h2 {
    padding: var(--space-y) 1em 1em;
  }

  .ui-board .demo-bg,
  .ui-board a h3 {
    box-shadow: 0 0 0 1px var(--color-dev) inset;
    background-image: repeating-linear-gradient(
        90deg,
        var(--color-dev) 0,
        transparent 1px,
        transparent 11px
      ),
      repeating-linear-gradient(
        180deg,
        var(--color-dev) 0,
        transparent 1px,
        transparent 11px
      );
  }

  .ui-board dl {
    display: block;
    border: 1px solid var(--color-dev);
    margin: 1rem 0;
    padding: 0.2rem;
  }

  .ui-board dd {
    border: 1px dashed var(--color-dev);
  }

  /* Breakpoints >>> */
  .ui-board .breakpoints .xs::after {
    content: "0px …";
  }
  .ui-board .breakpoints .sm::after {
    content: "576px";
  }
  .ui-board .breakpoints .md::after {
    content: "768px";
  }
  .ui-board .breakpoints .lg::after {
    content: "992px";
  }
  .ui-board .breakpoints .xl::after {
    content: "1200px";
  }
  .ui-board .breakpoints .xs {
    box-shadow: var(--break-box-shadow);
  }
  @media (min-width: 576px) {
    .ui-board .breakpoints .sm {
      box-shadow: var(--break-box-shadow);
    }
  }
  @media (min-width: 768px) {
    .ui-board .breakpoints .md {
      box-shadow: var(--break-box-shadow);
    }
  }
  @media (min-width: 992px) {
    .ui-board .breakpoints .lg {
      box-shadow: var(--break-box-shadow);
    }
  }
  @media (min-width: 1200px) {
    .ui-board .breakpoints .xl {
      box-shadow: var(--break-box-shadow);
    }
  }
  /* Breakpoints <<< */
</style>

